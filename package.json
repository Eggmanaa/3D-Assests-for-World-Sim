{
  "name": "through-history:-a-world-history-simulation",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=worldhistorysimulation-db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy dist",
    "db:create": "wrangler d1 create worldhistorysimulation-db",
    "db:migrate:local": "wrangler d1 migrations apply worldhistorysimulation-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply worldhistorysimulation-db",
    "db:console:local": "wrangler d1 execute worldhistorysimulation-db --local",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20251119.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.0",
    "hono": "^4.10.6",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "three": "^0.181.1",
    "wrangler": "^4.49.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
